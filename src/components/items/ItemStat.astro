---
interface Props {
    stat: string;
    text: string;
}

const {stat, text} = Astro.props;
---

<li class="flex flex-col justify-center items-center gap-2">
    <div class="flex items-center gap-2 text-red-400 bg-gradient-to-r from-red-500/20 to-pink-500/20 px-3 py-2 max-w-max rounded-xl">
        <slot name="icon" />
    </div>
    <span class="text-3xl font-bold text-rose-400">{stat}</span>
    <p class="text-sm text-gray-400">{text}</p>
</li>