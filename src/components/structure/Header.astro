---
import { Button, ButtonLink } from "../";
import { EmailSvg, DownloadSvg, LinkedinSvg, LocationSvg, StarsSvg, GitHubSvg } from "../../svgs";

---

<header class="relative w-full py-20 px-4 overflow-x-hidden">
    <div class="absolute inset-0 pointer-events-none mx-auto">
        <div class="absolute top-1/4 left-1/4 w-64 h-64 md:w-96 md:h-96 bg-red-500/10 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-1/4 right-1/4 w-56 h-56 md:w-80 md:h-80 bg-pink-500/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
        <div class="absolute top-1/2 left-1/2 w-44 h-4w-44 md:w-64 md:h-64 bg-rose-500/10 rounded-full blur-3xl animate-pulse delay-500"></div>
    </div>
    <div class="flex flex-col items-center gap-5">
        <!-- <div class="mx-auto w-[160px] rounded-lg">
            <img src="/empty.jpg" class="w-full object-fit rounded-lg" />
        </div> -->
        <div class="flex gap-2 items-center text-center">
            <span class="max-w-max w-1 h-1 p-1 rounded-full bg-green-500 animate-pulse"></span>
            <p class="flex items-center gap-2 max-w-max py-1 px-3 text-xs font-semibold border border-red-400 text-red-300 bg-red-400/10 rounded-full">
                <StarsSvg size={16} />
                Ingeniero en Sistemas
            </p>
        </div>
        <span class="text-gray-400">¡Hola! Soy</span>
        <h1 class="text-6xl text-red-100 text-center">Leonel Fiomelo</h1>
        <h2 class="bg-gradient-to-r from-red-400 via-pink-400 to-rose-400 bg-clip-text text-transparent text-center">Desarrollador Full Stack</h2>
        <p class="text-xl max-w-2xl text-center text-gray-200 my-2">
            Especializado en crear aplicaciones web escalables y de alto rendimiento. <br />
            Transformo ideas complejas en soluciones digitales elegantes y funcionales con pasión y dedicación.
        </p>
        <div class="flex w-full max-w-sm gap-4 text-center">
            <Button id="btn-contact" client:load fill onClick={() => null}>
                <Button.Icon><EmailSvg size={18} /></Button.Icon>
                <Button.Text>Contactar</Button.Text>
            </Button>
            <ButtonLink href="/portafolio/cv.pdf" download="leonel_fiomelo_cv.pdf" title="Descargar CV">
                <ButtonLink.Icon><DownloadSvg size={18} /></ButtonLink.Icon>
                <ButtonLink.Text>Descargar CV</ButtonLink.Text>
            </ButtonLink>
        </div>
        <div class="flex gap-6 text-gray-300">
            <a 
                target="_blank"
                href="https://github.com/LeonelFiomelo" 
                class="hover:cursor-pointer hover:text-red-400 transition-colors" 
                title="Github Leonel Fiomelo"
            >
                <GitHubSvg />
            </a>
            <a 
                target="_blank"
                href="https://linkedin.com/in/leonel-fiomelo" 
                class="hover:cursor-pointer hover:text-red-400 transition-colors"
                title="Linkedin Leonel Fiomelo"
            >
                <LinkedinSvg />
            </a>
            <span class="w-[1px] h-6 bg-gray-300"></span>
            <span class="flex items-center gap-2 text-sm">
                <LocationSvg size={16} />
                Buenos Aires, Argentina
            </span>
        </div>
    </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const btn = document.getElementById("btn-contact");
    if (btn) {
      btn.addEventListener("click", () => {
        const section = document.getElementById("contact");
        if (section) {
          section.scrollIntoView({ behavior: "smooth" });
        }
      });
    }
  });
</script>